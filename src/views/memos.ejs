<%- include('includes/head.ejs')%>
<link rel="stylesheet" href="/css/memos.css">
</head>
<%- include('includes/nav.ejs')%>


    <div class="main">
        <h1> Mémos ! </h1>
        <main class="main-container"> 
            <% if (memos.length >0) { %> 
                <% for(let memo of memos) { %> 
                    <article class="memo">
                        <h2 class="memo-title"> <%= memo.title %>  </h2>
                        <h4 class="memo-last-update"> Derniere Modification : <%= memo.updatedAt.toISOString().slice(0,10) %></h4>
                        <img class="memo-img" src="<%= memo.imgUrl %> " alt="<%= memo.title%> ">
                        <p class="memo-desc"> <%= memo.description.substring(0,110) %><b>...</b></p>
                        <a href="memos/<%= memo.id %>" class="btn"> Plus De Détails</a>
                    </article>
                <% } %> 
            <% } else {%>
                <h1> Pas de Mémos sauvegardés Voulez vous en <a href="">insérer ?</a> </h1>
            <%}%> 
    

        </main>
    </div>
  



    
</body>
</html>