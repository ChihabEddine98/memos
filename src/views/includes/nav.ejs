
<!-- Pour Le Boutton de responsive -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<body>

    <header class="main-header">
        <nav class="main-header__nav" id="navRes">
            <ul class="main-header__tabs-list">
                <li class="main-header__tab-item"><a href="/"  class="<%= path === '/' ? 'active' : '' %>"> Home</a></li>
                <% if (isAuth) { %>
                <li class="main-header__tab-item"><a href="/all_memos" class="<%= path === '/memos' ? 'active' : '' %>""> Mémos</a></li>
                <li class="main-header__tab-item"><a href="/mes_memos" class="<%= path === '/mes_memos' ? 'active' : '' %>"> Mes Mémos</a></li>
                <li class="main-header__tab-item"><a href="/add_memo" class="<%= path === '/add_memo' ? 'active' : '' %>"> New Mémo</a></li>
                <% }%>
                    <% if (!isAuth) { %>
                        <li class="btn_item"> 
                            <a href="/login" class="btn" > Se connecter </a>
                        </li>
                        <li class="btn_item" > 
                            <a class="btn" href="/register"> S'inscrire </a>
                        </li>
                    <% } else { %>
                        <div class="right_nav">

                            <div class="fullname">

                                <% let fullname=user.first_name+' '+user.last_name %> 

                                <p> <%= fullname.substring(0,24) %> </p>

                            </div>  

    

                          

                                <a href="/edit_user">

                                    <% if (!user.img_url) { %>

                                        <% if (user.sexe==='m'){ %>

                                            <img class="userImg" src="/img/profil_default_male.png" alt=""/>

                                        <% }else { %>

                                            <img class="userImg" src="/img/profil_default_female.jpg" alt=""/>

                                    <% }}else { %>

                                        <img class="userImg" src="<%= user.img_url %>" alt="photo de profil"/>

                                    <% } %>

                                </a>



                          

                            

                            <!-- <li class="btn_item"> -->

                                <form action="/logout" method="post">

                                    <button type="submit" id="btn_logout"> 

                                        <img src="/img/logout_icon.png" alt="" class="userImg">

                                    </button>

                                </form>

                            <!-- </li> -->
                        </div>
                    <% } %>
            
                <li class="main-header__tab-item">
                    <a href="javascript:void(0);" class="icon" onclick="goResponsive()">
                        <i class="fa fa-bars"></i>
                      </a>
                </li>

            </ul>
        </nav>
    </header> 

    <script src="/js/main.js"></script>