<link rel="stylesheet" href="css/add_memo.css">
</head>
<%- include('includes/nav.ejs')%>


        <div class="main">

            <main class="main-container">

                <form class="login-form" action="/add_memo" method="POST">
                    <div class="user-img">
                         <img src="img/add_memo.png" alt="Nouveau Memo">
                    </div>
                    <div class="form-control">
                        <input type="text" name="title" placeholder="Titre du Mémo">                 
                    </div>
                    <div class="form-control">
                        <input class="upload-img" type="file" name="imageUrl" placeholder="image">
                    </div>
                    <div class="form-control">
                        <textarea name="description" cols="30" rows="10" placeholder="Détails de votre Mémo..."></textarea>
                    </div>


                    <div class="form-control">
                        <input type="submit" class="btn" value="Valider">
                    </div>
                </form>


            </main>

        </div>



    
